{
    "services": {
        "product": {
            "url": "http://localhost:3002",
            "routes": [
                {
                    "path": "/products",
                    "methods": ["get", "post"]
                },
                {
                    "path": "/products/:id",
                    "methods": ["get"]
                }
            ]
        },
        "inventory": {
            "url": "http://localhost:3001",
            "routes": [
                {
                    "path": "/inventories/:id",
                    "methods": ["put", "get"]
                },
                {
                    "path": "/inventories",
                    "methods": ["post"]
                },
                {
                    "path": "/inventories/:id/history",
                    "methods": ["get"]
                }
            ]
        },
        "user": {
            "url": "http://localhost:3003",
            "routes": [
                {
                    "path": "/users",
                    "methods": ["post"]
                },
                {
                    "path": "/users/:id",
                    "methods": ["get"]
                }
            ]
        },
        "auth": {
            "url": "http://localhost:3004",
            "routes": [
                {
                    "path": "/auth/register",
                    "methods": ["post"]
                },
                {
                    "path": "/auth/login",
                    "methods": ["post"]
                },
                {
                    "path": "/auth/verify-token",
                    "methods": ["post"]
                },
                {
                    "path": "/auth/verify-email",
                    "methods": ["post"]
                }
            ]
        },
        "email": {
            "url": "http://localhost:3005",
            "routes": [
                {
                    "path": "/emails/send",
                    "methods": ["post"]
                },
                {
                    "path": "/emails",
                    "methods": ["get"]
                }
            ]
        }
    }
}