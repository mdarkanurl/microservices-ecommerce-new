{
    "services": {
        "product": {
            "url": "http://localhost:3002",
            "routes": [
                {
                    "path": "/products",
                    "methods": ["get", "post"]
                },
                {
                    "path": "/products/:id",
                    "methods": ["get"]
                }
            ]
        },
        "inventory": {
            "url": "http://localhost:3001",
            "routes": [
                {
                    "path": "/inventories/:id",
                    "methods": ["put", "get"]
                },
                {
                    "path": "/inventories",
                    "methods": ["post"]
                },
                {
                    "path": "/inventories/:id/history",
                    "methods": ["get"]
                }
            ]
        }
    }
}